
@{
    ViewBag.Title = "EditNotifications";
}

<h2>Email Notification Preferences:</h2>
<hr />
<p>Please select your prefered email notification options below.</p>

<div class="row">
    <div class="col-lg-12">
        <div class="checkbox">
            @Html.CheckBox("ReceiveEmail", (bool)ViewBag.ReceiveEmail) Click Me
            <label><input type="checkbox" value="1">Email me for every update to my order.</label>
        </div>
        <div class="checkbox">
            <label><input type="checkbox" value="2">Email me only after the tests are complete and then again when the results are ready to view.</label>
        </div>
        <div class="checkbox">
            <label><input type="checkbox" value="3">Email me only when the results are complete and ready to view.</label>
        </div>
        <hr />

        <p>@Html.ActionLink("Submit", "", "", null, new { @class = "btn btn-default" })</p>

    </div>
</div>






