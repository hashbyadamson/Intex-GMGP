<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body background="~/Content/img/background1.jpg">
    <div class="navbar navbar-default navbar-fixed-top" style="opacity:0.96">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/img/logo.gif" />

            </div>
            <div class="navbar-collapse collapse" style="padding: 17px 0">
                <ul class="nav navbar-nav" style="font-size: 150%">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Catalog", "Catalog", "Home")</li>
                    <li>@Html.ActionLink("Customer Portal", "Login", "Home")</li>
                    <li>@Html.ActionLink("Employee Portal", "Login", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="header-row" id="header-row" style="padding: 0px; overflow:hidden; height:100px;">
        @{
            Random rnd = new Random();
            int x = rnd.Next(1, 5);

            if (x == 1)
            {
                <img src="~/Content/img/banner1.png" style="width: 100%;">
            }
            else if (x == 2)
            {
                <img src="~/Content/img/banner2.jpg" style="width: 100%;">
            }
            else if (x == 3)
            {
                <img src="~/Content/img/banner4.png" style="width: 100%;">
            }
            else if (x == 4)
            {
                <img src="~/Content/img/banner5.png" style="width: 100%;">
            }
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
